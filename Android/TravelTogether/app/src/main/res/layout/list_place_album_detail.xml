<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="photoPlace"
            type="com.neungi.domain.model.PhotoPlace" />

        <variable
            name="vm"
            type="com.neungi.moyeo.views.album.viewmodel.AlbumViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/dp_small"
        android:background="@{(photoPlace.selected == true) ? @drawable/shape_button : @drawable/shape_button_disabled}"
        android:onClick="@{() -> vm.onClickPhotoPlace(photoPlace)}"
        android:paddingStart="@dimen/dp_medium"
        android:paddingTop="@dimen/dp_small"
        android:paddingEnd="@dimen/dp_medium"
        android:paddingBottom="@dimen/dp_small">

        <TextView
            android:id="@+id/tv_title_list_place_album_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendardsemibold"
            android:text="@{photoPlace.name}"
            android:textColor="@{(photoPlace.selected == true) ? @color/neutral_white : @color/neutral_90}"
            android:textSize="@dimen/font_size_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>