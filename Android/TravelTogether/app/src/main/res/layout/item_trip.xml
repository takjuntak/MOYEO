<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="trip"
            type="com.neungi.moyeo.views.plan.tripviewmodel.TripData" />
        <variable
            name="onDeleteClick"
            type="android.view.View.OnClickListener" />
        <variable
            name="onEditClick"
            type="android.view.View.OnClickListener" />
        <variable
            name="onItemClick"
            type="android.view.View.OnClickListener" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_border"
        android:layout_margin="15dp"
        android:onClick="@{onItemClick}"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <ImageView
            android:src="@drawable/bnv_album"
            android:id="@+id/imageview_plan"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:contentDescription="@string/description_plan_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="15dp"/>
        <TextView
            android:layout_margin="15dp"
            android:id="@+id/textview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/imageview_plan"
            android:text="@{trip.tripTitle}"
            app:layout_constraintVertical_bias="0.1"
            />
        <TextView
            android:layout_margin="15dp"
            android:id="@+id/textview_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/imageview_plan"
            android:text="@{trip.tripDate}"
            app:layout_constraintVertical_bias="0.4"
            />
        <TextView
            android:layout_margin="15dp"
            android:id="@+id/textview_number_of_participants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/imageview_plan"
            android:text="@{trip.tripParticipants}"
            app:layout_constraintVertical_bias="0.7"
            />
        <ImageButton
            android:onClick="@{onDeleteClick}"
            android:id="@+id/button_delete"
            android:contentDescription="@string/description_plan_delete_button"
            android:src="@drawable/baseline_delete_24"
            android:layout_margin="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"/>
        <ImageButton
            android:id="@+id/button_edit"
            android:onClick="@{onEditClick}"
            android:contentDescription="@string/description_plan_edit_button"
            android:src="@drawable/baseline_mode_edit_24"
            android:layout_margin="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/button_delete"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>